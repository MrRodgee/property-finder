<link rel="stylesheet" href="/styles/add-property.css">

<section class="content">
    <div class="title">
        <h1>Listing your property has never been easier</h1>
        <p>Just fill in the form below and you're good to go!</p>
        <hr>
    </div>

    <form action="/list-your-property" method="POST" class="form">
        <h2>Are you selling or renting your property?</h2>
        <div id="renting-div">
            <input type="radio" id="Selling" name="property[forRent]" value="0" onclick ="changeSubtype()">
            <label for="Selling">
                <i class="fas fa-dollar-sign"></i>
                SELLING
            </label>
            <input type="radio" id="Renting" name="property[forRent]" value="1" onclick ="changeSubtype()">
            <label for="Renting">
                <i class="fas fa-money-bill"></i>
                RENTING
            </label>

        </div>

        <h2>Choose property category</h2>
        <div id="type-div">
            <input type="radio" id="Residential" name="property[type]" value="Residential" onclick="changeSubtype()">
            <label for="Residential">
                <i class="fas fa-home"></i>
                RESIDENTIAL
            </label>
            <input type="radio" id="Commercial" name="property[type]" value="Commercial" onclick="changeSubtype()">
            <label for="Commercial">
                <i class="fas fa-building"></i>
                COMMERCIAL
            </label>
            <input type="radio" id="Landd" name="property[type]" value="Land" onclick ="changeSubtype()">
            <label for="Landd">
                <i class="fas fa-tree"></i>
                LAND
            </label>
        </div>

        <h2>Choose property type</h2>
        <div id="subtype-div">
            
        </div>

        <h2>Property details</h2>
        <div id="details">
            



    </div>





</section>

<script>
    function changeSubtype() {
        if (document.getElementById('Residential').checked) {
            document.getElementById('subtype-div').innerHTML = 
                '<input type="radio" id="Detached-House" name="property[subtype]" value="Detached House" onclick="FinalInfo()">' +
                '<label for="Detached-House">' +
                    '<i class="fas fa-home"></i>' +
                    ' DETACHED HOUSE' +
                '</label>' +
                '<input type="radio" id="Studio" name="property[subtype]" value="Studio" onclick="FinalInfo()">' +
                '<label for="Studio">' +
                    '<i class="fas fa-building"></i>' +
                    ' STUDIO' +
                '</label>' +
                '<input type="radio" id="Apartment" name="property[subtype]" value="Apartment" onclick="FinalInfo()">' +
                '<label for="Apartment">' +
                    '<i class="fas fa-building"></i>' +
                    ' APARTMENT' +
                '</label>' +
                '<input type="radio" id="Maisonette" name="property[subtype]" value="Maisonette" onclick="FinalInfo()">' +
                '<label for="Maisonette">' +
                    '<i class="fas fa-building"></i>' +
                    ' MAISONETTE' +
                '</label>';
        } else if (document.getElementById('Commercial').checked) {
            document.getElementById('subtype-div').innerHTML = 
                '<input type="radio" id="Office" name="property[subtype]" value="Office" onclick="FinalInfo()">' +
                '<label for="Office">' +
                    '<i class="fa-solid fa-briefcase"></i>' +
                    ' OFFICE' +
                '</label>' +
                '<input type="radio" id="Store" name="property[subtype]" value="Store" onclick="FinalInfo()">' +
                '<label for="Store">' +
                    '<i class="fa-solid fa-store"></i>' +
                    ' STORE' +
                '</label>' +
                '<input type="radio" id="Warehouse" name="property[subtype]" value="Warehouse" onclick="FinalInfo()">' +
                '<label for="Warehouse">' +
                    '<i class="fa-solid fa-warehouse"></i>' +
                    ' WAREHOUSE' +
                '</label>';
        } else if (document.getElementById('Landd').checked) {
            document.getElementById('subtype-div').innerHTML = 
                '<input type="radio" id="Land" name="property[subtype]" value="Land" onclick="FinalInfo()">' +
                '<label for="Land"> NO SUBTYPES </label>';
        } else {
            document.getElementById('subtype-div').innerHTML = '';
        }
    }

function FinalInfo() {
    const detachedHouse = document.getElementById('Detached-House');
    const studio = document.getElementById('Studio');
    const apartment = document.getElementById('Apartment');
    const maisonette = document.getElementById('Maisonette');
    const office = document.getElementById('Office');
    const store = document.getElementById('Store');
    const warehouse = document.getElementById('Warehouse');
    const land = document.getElementById('Land');

    if ((detachedHouse && detachedHouse.checked) || (studio && studio.checked) || 
        (apartment && apartment.checked) || (maisonette && maisonette.checked)) {
        document.getElementById('details').innerHTML = 
            '<div>'+
            '<input type="text" id="Country" name="location[country]" placeholder="Country" required>' +
            '<input type="text" id="City" name="location[city]" placeholder="City" required>' +
            '<input type="text" id="Neighborhood" name="location[neighborhood]" placeholder="Neighborhood" required>' +
            '<input type="text" id="zip" name="location[zip]" placeholder="Zip code" required>' +
            '<input type="text" id="address" name="property[address]" placeholder="Address" required>' +
            '</div>'+
            '<div>'+
            '<input type="number" id="price" name="property[price]" placeholder="Price" required>' +
            '<input type="number" id="surface" name="property[surface]" placeholder="Surface" required>' +
            '<input type="number" id="floor" name="property[floor]" placeholder="Floor" required>' +
            '<input type="number" id="levels" name="property[levels]" placeholder="Levels" required>' +
            '<input type="number" id="year" name="property[constructionYear]" placeholder="Construction Year" required>' +
            '</div>'+
            '<div>'+
            '<input type="number" id="bathrooms" name="property[bathrooms]" placeholder="Bathrooms" required>' +
            '<input type="number" id="bedrooms" name="property[bedrooms]" placeholder="Bedrooms" required>' +
            '<input type="text" id="description" name="property[description]" placeholder="Description" required>'+
            '</div>'+
            '<div>'+
            '<button type="submit" id="add-property">ADD PROPERTY</button>'+
            '</div>';
    } else if ((office && office.checked) || 
        (store && store.checked) || (warehouse && warehouse.checked)) {
        document.getElementById('details').innerHTML = 
            '<div>'+
            '<input type="text" id="country" name="location[country]" placeholder="Country" required>' +
            '<input type="text" id="city" name="location[city]" placeholder="City" required>' +
            '<input type="text" id="neightborhood" name="location[neighborhood]" placeholder="Neighborhood" required>' +
            '<input type="text" id="zip" name="location[zip]" placeholder="Zip code" required>' +
            '<input type="text" id="address" name="property[address]" placeholder="Address" required>' +
            '</div>'+
            '<div>'+
            '<input type="number" id="price" name="property[price]" placeholder="Price" required>' +
            '<input type="number" id="surface" name="property[surface]" placeholder="Surface" required>' +
            '<input type="number" id="bathrooms" name="property[bathrooms]" placeholder="Bathrooms" required>' +
            '<input type="number" id="floor" name="property[floor]" placeholder="Floor" required>' +
            '</div>'+
            '<div>'+
            '<input type="number" id="levels" name="property[levels]" placeholder="Levels" required>' +
            '<input type="number" id="year" name="property[constructionYear]" placeholder="Construction year" required>' +
            '<label for="parking">Parking:</label>' +
            '<select id="parking" name="property[parking]" required>' +
                '<option value="0">No</option>' +
                '<option value="1">Yes</option>' +
            '</select>' +
            '<input type="text" id="description" name="property[description]" placeholder="Description" required>'+
            '</div>'+
            '<div>'+
            '<button type="submit" id="add-property">ADD PROPERTY</button>'+
            '</div>';
    } else if (land && land.checked) {
        document.getElementById('details').innerHTML = 
            '<div>'+
            '<input type="text" id="Country" name="location[country]" placeholder="Country" required>' +
            '<input type="text" id="City" name="location[city]" placeholder="City" required>' +
            '<input type="text" id="Neighborhood" name="location[neighborhood]" placeholder="Neighborhood" required>' +
            '<input type="text" id="zip" name="location[zip]" placeholder="Zip code" required>' +
            '<input type="text" id="address" name="property[address]" placeholder="Address" required>' +
            '</div>'+
            '<div>'+
            '<input type="number" id="price" name="property[price]" placeholder="Price" required>' +
            '<input type="number" id="surface" name="property[surface]" placeholder="Surface" required>' +
            '<label for="buildable">Buildable:</label>' +
            '<select id="buildable" name="property[buildable]" required>' +
                '<option value="0">No</option>' +
                '<option value="1">Yes</option>' +
            '</select>' +
            '<input type="number" id="year" name="property[constructionYear]" placeholder="Construction year" required>' +
            '<input type="text" id="description" name="property[description]" placeholder="Description" required>'+
            '</div>'+
            '<div>'+
            '<button type="submit" id="add-property">ADD PROPERTY</button>'+
            '</div>';
    } else {
        document.getElementById('details').innerHTML = '';
    }
}


    </script>